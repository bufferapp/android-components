<resources>

    <style name="App.Theme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App.Theme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--Text Styles-->
    <style name="HeadingOne">
        <item name="android:textSize">@dimen/text_hero</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="HeadingTwo">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ParagraphMedium">
        <item name="android:textSize">@dimen/text_small_body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Paragraph">
        <item name="android:textSize">@dimen/text_small_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Label">
        <item name="android:textSize">@dimen/text_small_body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Input">
        <item name="android:textSize">@dimen/text_small_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="InputDisabled">
        <item name="android:textSize">@dimen/text_small_body</item>
        <item name="android:textColor">@color/text_disabled</item>
    </style>

    <style name="InputPlaceholder">
        <item name="android:textSize">@dimen/text_small_body</item>
        <item name="android:textColor">@color/text_placeholder</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/text_smaller_body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SmallTextHelp">
        <item name="android:textSize">@dimen/text_smaller_body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red_dark</item>
    </style>

</resources>
